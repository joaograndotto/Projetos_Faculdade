**1-> Recebe tres argumentos e some eles**
"""

start = 'S'
while (start == 'S'):

  def argumento(num1, num2, num3):
    soma = num1 + num2 + num3
    print( f"{num1} + {num2} + {num3} = {soma}")

  
  num1 = float(input("Digite o numero:"))
  num2 = float(input("Digite o numero:"))
  num3 = float(input("Digite o numero:"))
  argumento(num1, num2, num3)
  start = input("Reiniciar processo? (S / N): ").upper()

"""2-> **Construção de retangulos** """

start = 'S'
while (start == 'S'):

  def ret(numero_de_linhas, numero_de_colunas):
      if numero_de_linhas > 10:
        numero_de_linhas = 10
      elif numero_de_colunas < 2:
        numero_de_colunas = 2
      else:
        coluna = '|'
        linha = '-+'

        coluna_do_desenho = coluna + (linha * numero_de_colunas) + coluna
        linha_do_desenho = coluna_do_desenho + '\n'
        desenho = linha_do_desenho * numero_de_linhas
        print()
        print(desenho)



  numero_de_linhas = int(input('Digite numero de linhas '))
  numero_de_colunas = int(input('Digite numero de colunas: '))
  ret(numero_de_linhas, numero_de_colunas)
  start = input("Reiniciar processo? (S / N):").upper()

"""**Calculo de Juros Compostos**"""

start = 'S'
while (start == 'S'):


  def juros(valor_financiado, taxa, tempo,mes = 0):

    taxa = taxa / 100
 
    while ( mes < tempo): 
      mes = mes + 1
      v1 = valor_financiado * taxa
      valor_financiado = valor_financiado + v1
      print("No mês %d   taxa de juros %.2f     é  igual %.2f" %(mes ,v1 ,valor_financiado))
  
    print("O valor final %.2f" %(valor_financiado))

  linha = 32 * '-' 
  print(linha)
  print("CALCULADORA DE JUROS COMPOSTOS")
  print(linha)
  print("\n")

  valor_financiado = int (input("\nDigite o valor finaciado:\n>>>"))
  taxa = float (input("\nDigite a taxa mensal:\n>>>"))
  tempo =  int (input("\nDigite o tempo em (meses) :\n>>>"))
  juros(valor_financiado, taxa, tempo)
  start = input("Reiniciar processo? (S / N): ").upper()
